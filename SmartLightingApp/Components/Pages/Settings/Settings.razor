@code {
    [Parameter] public string? IpAddress { get; set; }
    
    private string CurrentIpAddress => IpAddress ?? "192.168.4.1"; // Tasmota AP default IP
    private TasmotaStatus? deviceStatus;
    private List<WifiScanResult>? wifiNetworks;
    private string selectedSsid = "";
    private string wifiPassword = "";
    private bool showWifiChange = false;
    
    private bool isLoadingStatus = false;
    private bool isScanning = false;
    private bool isSavingWifi = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadDeviceStatus();
    }

    private async Task LoadDeviceStatus()
    {
        try
        {
            isLoadingStatus = true;
            StateHasChanged();

            tasmotaClient.SetIp(CurrentIpAddress);
            deviceStatus = await tasmotaClient.GetStatusAsync();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.log", $"Device status error: {ex.Message}");
            deviceStatus = null;
        }
        finally
        {
            isLoadingStatus = false;
            StateHasChanged();
        }
    }

    private string GetWifiModeText()
    {
        // WifiConfig deÄŸerine gÃ¶re mode belirleme
        // 2 = AP Mode + Config, 4 = Client Mode
        if (deviceStatus?.StatusNET?.WifiConfig == 2)
            return "AP + Config Mode";
        
        return deviceStatus?.StatusSTS?.Wifi?.SSId != null ? "Client Mode" : "AP Mode";
    }

    private async Task ScanWifiNetworks()
    {
        try
        {
            isScanning = true;
            StateHasChanged();

            wifiNetworks = await tasmotaClient.ScanWifiAsync();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("showErrorAlert", "Tarama HatasÄ±", ex.Message);
        }
        finally
        {
            isScanning = false;
            StateHasChanged();
        }
    }

    private void SelectNetwork(string? ssid)
    {
        if (!string.IsNullOrEmpty(ssid))
        {
            selectedSsid = ssid;
            StateHasChanged();
        }
    }

    private string GetSignalIcon(int rssi)
    {
        return rssi switch
        {
            >= 75 => "ðŸ“¶",
            >= 50 => "ðŸ“¶",
            >= 25 => "ðŸ“¶",
            _ => "ðŸ“¶"
        };
    }

    private async Task SetupWifiConnection()
    {
        if (string.IsNullOrEmpty(selectedSsid))
        {
            await JSRuntime.InvokeVoidAsync("showErrorAlert", "Hata", "LÃ¼tfen bir WiFi aÄŸÄ± seÃ§in.");
            return;
        }

        try
        {
            isSavingWifi = true;
            StateHasChanged();

            // 1. mDNS aktifleÅŸtir
            await tasmotaClient.EnableMdnsAsync(true);
            
            // 2. WifiConfig 2 (AP + Config mode)
            await tasmotaClient.SetWifiRecoveryModeAsync(WifiRecoveryMode.AccessPoint);
            
            // 3. WiFi credentials kaydet
            await tasmotaClient.SetWifiCredentialsAsync(selectedSsid, wifiPassword, false);

            await JSRuntime.InvokeVoidAsync("showSuccessAlert", 
                "WiFi AyarlarÄ± Kaydedildi", 
                $"Cihaz '{selectedSsid}' aÄŸÄ±na baÄŸlanmaya Ã§alÄ±ÅŸacak. BirkaÃ§ saniye sonra yeniden baÄŸlanabilirsiniz.");

            // Sayfa yenileme veya ana sayfaya dÃ¶nÃ¼ÅŸ
            await Task.Delay(3000);
            navigation.NavigateTo("/");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("showErrorAlert", "Kaydetme HatasÄ±", ex.Message);
        }
        finally
        {
            isSavingWifi = false;
            StateHasChanged();
        }
    }

    private async Task ShowChangeWifi()
    {
        showWifiChange = true;
        await ScanWifiNetworks();
        StateHasChanged();
    }

    private async Task ChangeWifiConnection()
    {
        if (string.IsNullOrEmpty(selectedSsid))
        {
            await JSRuntime.InvokeVoidAsync("showErrorAlert", "Hata", "LÃ¼tfen bir WiFi aÄŸÄ± seÃ§in.");
            return;
        }

        try
        {
            isSavingWifi = true;
            StateHasChanged();

            // Mevcut baÄŸlantÄ± iÃ§in WiFi deÄŸiÅŸtirme
            await tasmotaClient.EnableMdnsAsync(true);
            
            // 2. WifiConfig 2 (AP + Config mode)
            //await tasmotaClient.SetWifiRecoveryModeAsync(WifiRecoveryMode.AccessPoint);
            await tasmotaClient.SetWifiCredentialsAsync(selectedSsid, wifiPassword, false);

            await JSRuntime.InvokeVoidAsync("showSuccessAlert", 
                "WiFi DeÄŸiÅŸtirildi", 
                $"Cihaz '{selectedSsid}' aÄŸÄ±na baÄŸlanmaya Ã§alÄ±ÅŸacak. BirkaÃ§ saniye sonra yeniden baÄŸlanabilirsiniz.");

            showWifiChange = false;
            await Task.Delay(2000);
            await LoadDeviceStatus(); // Durumu yenile
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("showErrorAlert", "WiFi DeÄŸiÅŸtirme HatasÄ±", ex.Message);
        }
        finally
        {
            isSavingWifi = false;
            StateHasChanged();
        }
    }

    private void CancelWifiChange()
    {
        showWifiChange = false;
        selectedSsid = "";
        wifiPassword = "";
        StateHasChanged();
    }

    private async Task RepairWifiConnection()
    {
        try
        {
            await tasmotaClient.SetWifiRecoveryModeAsync(WifiRecoveryMode.AccessPoint);
            await tasmotaClient.RestartAsync();
            await JSRuntime.InvokeVoidAsync("showInfoAlert", 
                "WiFi Repair", 
                "Cihaz yeniden baÅŸlatÄ±ldÄ±. WiFi baÄŸlantÄ±sÄ± onarÄ±lÄ±yor...");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("showErrorAlert", "Repair HatasÄ±", ex.Message);
        }
    }

    private async Task RestartDevice()
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("showDeleteConfirmation", 
            "CihazÄ± Yeniden BaÅŸlat", 
            "CihazÄ± yeniden baÅŸlatmak istediÄŸinize emin misiniz?");
        if (confirmed)
        {
            await tasmotaClient.RestartAsync();
            await JSRuntime.InvokeVoidAsync("showInfoAlert", "Yeniden BaÅŸlatma", "Cihaz yeniden baÅŸlatÄ±lÄ±yor...");
        }
    }

    private async Task EnableMdns()
    {
        try
        {
            await tasmotaClient.EnableMdnsAsync(true);
            await JSRuntime.InvokeVoidAsync("showSuccessAlert", "mDNS", "mDNS baÅŸarÄ±yla aktifleÅŸtirildi.");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("showErrorAlert", "mDNS HatasÄ±", ex.Message);
        }
    }

    private async Task ShowFactoryReset()
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("showDeleteConfirmation", 
            "Factory Reset", 
            "Factory Reset yapÄ±lsÄ±n mÄ±?\n\nBu iÅŸlem tÃ¼m ayarlarÄ± siler ve geri alÄ±namaz!");
        
        if (confirmed)
        {
            await tasmotaClient.FactoryResetAsync(2); // Keep WiFi/MQTT
            await JSRuntime.InvokeVoidAsync("showInfoAlert", "Factory Reset", "Cihaz fabrika ayarlarÄ±na dÃ¶ndÃ¼rÃ¼lÃ¼yor...");
        }
    }

    private void GoBack()
    {
        navigation.NavigateTo("/");
    }
}